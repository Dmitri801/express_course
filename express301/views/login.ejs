<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="stylesheets/main.css">
  <link rel="stylesheet" href="stylesheets/loginSite.css">
  <link href="https://fonts.googleapis.com/css?family=Crete+Round|Roboto" rel="stylesheet">
  <title>Scarefix Login</title>
</head>
<body>
 <div class="background_image"></div>
  <div class="header">
   <h1>ScareFix</h1>
  </div>
<div class="signin_container">
 <div class="signin_card">
  <div class="signin_content">
      <h3>Sign In</h3>
    <% if(msg !== "") { %>
    <div class="error_container">
      <%= msg %> 
    </div>
  <% } %>
   <div class="login_form">
    <form id="form" action="/process_login" method="post">
      <input placeholder="email" type="email" name="email">
      <input placeholder="password" type="password" name="password">
      <div class="submit_container">
      <div class="submit_btn">
      <h2>Sign In </h2>
      </div>
      </div>
    </form>
   </div>
  </div>
   <div class="info_content">
    Not a member? <span>Register Here</span>
   </div>
 </div>
</div>
<footer>
<p>DMI Web Design</p>
 <span class="copyright">Copyright &copy;2018</span>
</footer>
<script>
 const form = document.getElementById("form");
 const submitBtn = document.querySelector(".submit_btn");

 submitBtn.addEventListener("click", () => {
   form.submit();
 })
</script>
</body>
</html>